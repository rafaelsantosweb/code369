{#
/**
 * @file
 * Template for a forum node in full display mode.
 */
#}

  {% block content %}
  <div class="container estudos-internas">

    {% if node.field_ocultar_imagem_e_chamada.value == '0' %}
      <div class="row">
        <div class="col">
        <img  src="{{ url('<front>') }}{{file_url(node.field_imagem.entity.fileuri)}}" width="90%" alt="{{ node.field_imagem.alt }}" />
        </div>
        <div class="col">
          <h1>{{ node.label }}</h1><br>
              {{ node.body.value|raw }}
          <br>
        </div>
      </div>
    {% else %}
      <div class="row">
        <div class="col">
          <h1>{{ node.label }}</h1><br>
              {{ node.body.value|t }}
          <br>
        </div>
      </div>
    {% endif %}

    <div class="render-paragrafs-estudos">
      {{ bamboo_render_field('field_content', 'node') }}
    </div>

  </div>
  {% endblock %}
