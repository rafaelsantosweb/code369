{#
/**
 * @file
 * Template for a forum node in full display mode.
 */
#}
{% include "@radix/content/node.twig" %}
{% include "@radix/field/field.twig" %}

  {% block content %}
  <div class="container estudos-internas">
    <div class="row">
      <div class="col">
      <img  src="{{ url('<front>') }}{{file_url(node.field_imagem.entity.fileuri)}}" width="550px" alt="{{ node.field_imagem.alt }}" />
      </div>
      <div class="col">
        <h1>{{ node.label }}</h1>
            {{ node.body.value|t }}
        <br>
       
      </div>
    </div>

      <div class="render-paragrafs-estudos">

        {{ bamboo_render_field('field_content', 'node') }}
      </div>

  </div>
  {% endblock %}
